{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "User": true,
        "Http": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
	"no-unused-vars": [
	    "warn", 
	    { 
		"vars": "all",
		"args": "after-used", 
		"ignoreRestSiblings": false 
	    }
	],

	"no-console": "off"
    }
}
