- var i = 0;
each game in games
    div()
        form(action="" id="join-game")
        div(class="game_lobby_container")
            div(class="columns outer-container")
                div
                    h3(class="half-width") #{game[1]}
                div
                    h2(class="base-width") #{game[0]}
                div
                    input(type='submit' class='button-green base-width' value='join')
                    input(type='hidden' value="#{game[1]}")

    if (++i < games.length)
        div(class="spacer")
else
    div(class="game_lobby_container columns")
        div
            h2 No existing games. Make one! 
