div(class="logo")
    h1(class="logo_header") bacter.io
div(class="base-width centered outer-container" id="signup")
    div(class="form")
        form(action="" id="signup-form")
            input(type="text" name="login" placeholder="Login")
            input(type="email" name="email" placeholder="Email")
            input(type="password" name="password" placeholder="Password")
            input(type="password" name="password-repeat" placeholder="Password again")
            div(class="columns")
                a(href="/" class="button-gray") Back
                input(type="submit" class="button-red signin-button" value="Sign up")